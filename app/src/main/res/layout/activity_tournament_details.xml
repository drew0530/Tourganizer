<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tournament_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tournament Name"
        android:padding="16dp"
        android:textSize="24sp" />

    <TableLayout
        android:id="@+id/team_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tournament_name"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="8dp"
        android:stretchColumns="0,1,2">

        <TableRow
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/team1Image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/orange_team"/>

                <TextView
                    android:id="@+id/team1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Team 1" />
            </LinearLayout>


            <TextView
                android:id="@+id/vsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                android:text="VS" />

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/team2Image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/blue_team"/>
                <TextView
                    android:id="@+id/team2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Team 2" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/next_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/team_images"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/next_match_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Match: " />

        <TextView
            android:id="@+id/match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00/00 @ 00:00" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/next_match"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>